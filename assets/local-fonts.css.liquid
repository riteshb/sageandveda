/* Local Font Definitions - Replaces Google Fonts CDN */

/* Poppins Font Family */
@font-face {
  font-family: 'Poppins';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url('{{ "poppins-regular.woff2" | asset_url }}') format('woff2'),
       url('{{ "poppins-regular.woff" | asset_url }}') format('woff'),
       url('{{ "poppins-regular.ttf" | asset_url }}') format('truetype');
}

