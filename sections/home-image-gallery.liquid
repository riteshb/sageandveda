            {%- for block in section.blocks -%}
            <li class="image-bar__item {% if section.settings.enable_slider %}swiper-slide{% endif %}" {{ block.shopify_attributes }} >
            <div class="left-block">
              {% if block.settings.block_title_1 != blank %}
                    <h3>{{block.settings.block_title_1}}</h3>
                    {% endif %}
              {% if block.settings.sub_block_title_1 != blank %}
                    <h4>{{block.settings.sub_block_title_1}}</h4>
                    {% endif %}
            {% if block.settings.large_image != blank %}
                  {%- assign block_img_url = block.settings.large_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img class="lazyload"
                       src="{{ 'loading.gif' | asset_url }}"
                       data-src="{{ block_img_url }}"
                       data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                       data-aspectratio="{{ block.settings.large_image.aspect_ratio }}"
                       data-sizes="auto"            
                       alt="{{ block.settings.block_title }}">            
                  <noscript>
                    {{ block.settings.large_image | img_url: '480x480', scale: 2 | img_tag: block.settings.large_image.alt, 'dt-sc-noscript-image' }}
                  </noscript>
                  {% else %}
                    {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
{%- assign placeholder_image = 'hero-apparel-' | append: placeholder_image_index -%}
{{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
              </div>
              <div class="right-block">
             
                

                {% if block.settings.block_title != blank or  block.settings.block_description != blank or  block.settings.block_button_link != blank %}
                <div class="dt-sc-grid-banner-content 
                            {% unless section.settings.block_banner_style == 'grid' %} {{ block.settings.content_position }}{% endunless%}
                            {% if section.settings.block_banner_style == 'grid' %}{{ block.settings.block_text_align}}{% endif %}">
                  {% unless section.settings.block_banner_style == 'grid' %}
                  <div class="dt-sc-grid-banner-inner {{ block.settings.block_text_align}}">
                    {% endunless %}
                    <div class="dt-sc-grid-banner-image {{ overlay_class}}">
                  
                  {% if block.settings.block_image != blank %}
                  {%- assign block_img_url = block.settings.block_image | img_url: '100x100'  -%}
                  <img  src="{{ block_img_url }}" alt="{{ block.settings.block_title }}">                              
                  {% else %}
                           {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
{%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
{{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
