<div class="{{ footer_column_alignment}}">
{% if block.settings.title != blank  and section.settings.show_footer_title %}        
<h5 class="footer__title ">{{ block.settings.title}}</h5> 
{% endif %}

  {% if block.settings.logo %}

  {%- assign footer_logo_size = block.settings.footer_logo_height | prepend: 'x' -%}  

  <a href="{{ routes.root_url }}">
    <img src="{{ block.settings.logo | img_url: footer_logo_size, scale: 2 }}" alt="{{ block.settings.logo.alt | default: shop.name }}" style="height:{{ block.settings.footer_logo_height}}px">
  </a>
  {% endif %}
  
{% if block.settings.footer_address != blank or  block.settings.footer_contact_no != blank or  block.settings.office_hours != blank  or block.settings.footer_contact_link != blank and block.settings.footer_contact_id != blank %}
<ul class="contact-info">
  {% if block.settings.footer_address != blank %}
  <li class="address">         
    <address> <i class="fa fa-home"></i>{{ block.settings.footer_address }}</address>
  </li>
  {% endif %}  
  {% if block.settings.footer_contact_no != blank %}
  <li class="contact-phone">    
    <i class="fa fa-phone"></i>{{ block.settings.footer_contact_no }}    
  </li>
  {% endif %}

  {% if block.settings.office_hours != blank %}
  <li class="office-hours">
    <i class="fa fa-clock-o"></i>{{ block.settings.office_hours }}
  </li>
  {% endif %}

  {% if block.settings.footer_contact_id != blank %}
  <li class="office-mail">
    <a href="mailto:{{ block.settings.footer_contact_id}}">
      <i class="fa fa-envelope"></i>{{ block.settings.footer_contact_id }}</a>     
  </li>
  {% endif %}
</ul>
{% endif %}       

{% if section.settings.social_placement == 'with_address'  and section.settings.show_social %}   
{% include 'social-links' %}
{% endif %}
</div>