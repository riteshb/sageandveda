{% doc %}
  @prompt
    I want a video on the page, a text section, footer and a header
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-text-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-text-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.5;
  }

  .ai-text-body-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-text-body-{{ ai_gen_id }} p {
    margin: 0 0 1em;
  }

  .ai-text-body-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-section-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.padding_top | times: 0.6 }}px {{ block.settings.padding_horizontal | times: 0.6 }}px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-text-body-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<text-section-{{ ai_gen_id }} class="ai-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    {% if block.settings.text != blank %}
      <div class="ai-text-body-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>
</text-section-{{ ai_gen_id }}>

<script>
  (function() {
    class TextSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('text-section-{{ ai_gen_id }}', TextSection{{ ai_gen_id }});
  })();
</script>

